
@model  List<Model.Company>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<section class="adminNavBar"></section>
<div class="container">
    <div class="row">
        <section class="content col-md-10" style="margin-right: 5%;">
            <h2>الشركات</h2>
            <p>
                @Html.ActionLink("اضافه", "Create", new { }, new { @class = "btn btn-success", @style = "padding: 6px 0px;width: 10%;" })
            </p>
            <table class="table table-bordered">
                <thead>
                    <tr>
                        <th>
                            @Html.DisplayName("الإسم")
                        </th>
                        <th>
                            @Html.DisplayName("البريد الإلكتروني")
                        </th>
                        <th></th>
                    </tr>
                </thead>


                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.CompanyName)
                        </td>
                        
                        <td>
                            @Html.DisplayFor(modelItem => item.Email)
                        </td>

                        <td>
                            @Html.ActionLink("تفاصيل", "Details", new { id = item.CompanyId }, new { @class = "btn btn-info", @style= "padding: 3px 0px;" }) |
                            @Html.ActionLink("تعديل", "Create", new { id = item.CompanyId }, new { @class = "btn btn-primary", @style = "padding: 3px 0px;" })
                        </td>
                    </tr>
                }

            </table>


        </section>

    </div>

</div>
